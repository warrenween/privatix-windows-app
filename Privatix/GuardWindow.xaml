<Window x:Class="Privatix.GuardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Guard Connection" Height="130" Width="300" ResizeMode="NoResize" FontFamily="Segoe UI" Topmost="True" WindowStartupLocation="CenterScreen" Icon="res/app.ico">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="49" Width="274" Text="VPN connection lost. Connection Guard is enabled. You can try reconnect or disable Connection Guard."/>
        <Button x:Name="btnDisableGuard" Content="Disable Guard" HorizontalAlignment="Left" Margin="193,64,0,0" VerticalAlignment="Top" Width="92" RenderTransformOrigin="1.307,0.682" Click="btnDisableGuard_Click"/>
        <Button x:Name="btnReconnect" Content="Reconnect" HorizontalAlignment="Left" Margin="113,64,0,0" VerticalAlignment="Top" Width="75" Click="btnReconnect_Click"/>
    </Grid>
</Window>
