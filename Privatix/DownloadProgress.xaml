<Window x:Class="Privatix.DownloadProgress"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Downloading Update" Height="100" Width="300" WindowStartupLocation="CenterScreen" Icon="res/app.ico" 
        ResizeMode="NoResize" FontFamily="Segoe UI Semibold">
    <Grid>
        <ProgressBar x:Name="pbDownload" HorizontalAlignment="Left" Height="20" Margin="10,10,0,0" VerticalAlignment="Top" Width="272"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="207,38,0,0" VerticalAlignment="Top" Width="75" Click="btnCancel_Click"/>
    </Grid>
</Window>
